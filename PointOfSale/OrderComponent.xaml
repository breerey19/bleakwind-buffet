<UserControl x:Class="PointOfSale.OrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="432" d:DesignWidth="175">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="49"/>
            <RowDefinition Height="49"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="17"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="3" Grid.Row="1" FontStyle="Normal" FontSize="17" TextAlignment="Center" FontWeight="SemiBold" Margin="0,2,0,0">
            Order Information
        </TextBlock>
        <ListBox Grid.Column="3" Grid.Row="2" Grid.RowSpan="9" Name="ReceiptListBox" Margin="6,0,6,0"/>
        <TextBox Name="subtotalTextBox" Grid.Column="3" Grid.Row="8" Margin="5,0,5,0">
            Subtotal:    
        </TextBox>
        <TextBox Name="taxTextBox" Grid.Column="3" Grid.Row="9" Margin="5,0,5,0">
            Tax:
        </TextBox>
        <TextBox Name="totalTextBox" Grid.Column="3" Grid.Row="10" Margin="5,0,5,0">
            Total:
        </TextBox>
        <Border Name="receiptItemsBorder" Grid.Column="3" Grid.Row="2" Grid.RowSpan="9" BorderThickness="3" BorderBrush="Black" Margin="6,0,6,0"/>
    </Grid>
</UserControl>
